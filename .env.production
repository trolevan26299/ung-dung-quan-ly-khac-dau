# Production Environment Variables
# Copy this file to .env on your VPS and update the values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-super-secure-mongodb-password-change-this
MONGO_DATABASE=khac_dau_tt_prod

# Backend Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long-change-this
JWT_EXPIRES_IN=7d

# Docker Images (Auto-set by CI/CD)
BACKEND_IMAGE=ghcr.io/your-username/khac-dau-tt-backend:latest
FRONTEND_IMAGE=ghcr.io/your-username/khac-dau-tt-frontend:latest

# VPS Configuration (Set in GitHub Secrets)
VPS_HOST=your-vps-ip-address
VPS_USERNAME=your-vps-username
VPS_PORT=22
VPS_PROJECT_PATH=/opt/khac-dau-tt

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8081/api
REACT_APP_ENV=production

# Optional: Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook 